---
interface Props {
    text: string
    buttonType?: 'primary' | 'secondary'
    addClasses?: string
}

const {text, buttonType, addClasses} = Astro.props

const buttonTypeVar = {
    primary: 'border-darkBlue hover:bg-darkBlue hover:text-white',
    secondary: 'border-yellow hover:bg-yellow hover:text-white'
}
---
<style>
    .button-center {
        position: absolute;
        right: 50%;
        transform: translate(50%, -50%);
        z-index: 20;

        margin-top: 0;
    }
</style>

<button
    class=`whitespace-nowrap rounded-full font-semibold border-solid border-2 px-8 py-1 mt-[40px] ${buttonType ? buttonTypeVar[buttonType] : buttonTypeVar['primary']} ${addClasses || ''}`
>
    {text}
</button>