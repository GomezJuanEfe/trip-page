---
import Button from './Button.astro';

interface Props {
  subHeading: string;
  heading: string;
  paragraph: string;
  button: string;
}

const { subHeading, heading, paragraph, button } = Astro.props;
---

<div class="py-[30px] px-[55px]">
  <h3 class="text-lg font-serif font-extrabold text-darkBlue leading-[1.9rem]">
    {subHeading}
  </h3>
  <h2 class="text-lg font-extrabold leading-8 mt-2 tracking-[4px]">
    {heading}
  </h2>
  <p class="font-medium leading-8 mt-2">{paragraph}</p>
  <Button text={button} />
</div>
